{
  "name": "codegenie",
  "displayName": "CodeGenie",
  "description": "AI-powered code completion and assistance for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codegenie.acceptGhostSuggestion",
        "title": "Accept Ghost Suggestion"
      },
      {
        "command": "codegenie.start",
        "title": "Start CodeGenie"
      },
      {
        "command": "codegenie.complete",
        "title": "Complete Code with CodeGenie"
      },
      {
        "command": "codegenie.fillInTheMiddle",
        "title": "Fill Code Gaps with CodeGenie"
      },
      {
        "command": "codegenie.debugCode",
        "title": "Debug Selected Code"
      },
      {
        "command": "codegenie.optimize",
        "title": "Optimize"
      }
    ],
    "keybindings": [
      {
        "command": "codegenie.complete",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "codegenie.acceptGhostSuggestion",
        "key": "tab",
        "when": "editorTextFocus"
      },
      {
        "command": "codegenie.fillInTheMiddle",
        "key": "ctrl+alt+8",
        "when": "editorTextFocus"
      },
      {
        "command": "codegenie.debugCode",
        "key": "ctrl+shift+8",
        "when": "editorTextFocus"
      },
      {
        "command": "codegenie.optimize",
        "key": "ctrl+shift+o",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cross-fetch": "^4.1.0",
    "marked": "^4.3.0"
  }
}